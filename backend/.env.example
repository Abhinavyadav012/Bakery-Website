# Perfect Bakery - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5176

# ===========================================
# DATABASE
# ===========================================
# For local MongoDB:
MONGODB_URI=mongodb://127.0.0.1:27017/perfectbakery
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/perfectbakery

# ===========================================
# AUTHENTICATION
# ===========================================
# Session Secret (change in production!)
SESSION_SECRET=perfect-bakery-secret-key-2024

# JWT Secrets (change in production!)
JWT_SECRET=perfect-bakery-jwt-secret-key-2024
JWT_REFRESH_SECRET=perfect-bakery-jwt-refresh-secret-key-2024

# ===========================================
# RAZORPAY PAYMENT GATEWAY
# ===========================================
# Get your keys from https://dashboard.razorpay.com/app/keys
# Test mode keys start with rzp_test_
# Live mode keys start with rzp_live_
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_KEY_SECRET

# Razorpay Webhook Secret (optional, for webhook verification)
RAZORPAY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# ===========================================
# OAUTH (Optional)
# ===========================================
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET
RAZORPAY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET
